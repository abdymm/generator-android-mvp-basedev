    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_people_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1489844-1"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/list_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Abdy Malik Mulky"
        app:layout_constraintStart_toEndOf="@+id/list_people_id"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/list_people_id"
        android:textSize="18sp" />
</android.support.constraint.ConstraintLayout>
